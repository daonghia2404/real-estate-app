      .modal-content
        .modal-header
          h5.modal-title#videoContactModalModal Example title
          button.close(data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times
        .modal-body
          .video-contact-wrapper
            video(src="./assets/videos/video-sample.mp4" controls style="width: 100%;") 

