block pages 
  - const page = 'payment'
  section.section.section-account 
    .container 
      .section-wrapper 
        .tab-wrapper
          .row 
            .col-lg-4
              include includes/components/account-sidebar.pug
            .col-lg-8
              .account-infomation.project-detail-card
                h3.project-title Packages
                .infomation-main 
                  .row 
                    .col-lg-8
                      form(action="#" method="method").custom-style-form
